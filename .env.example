# Root environment variables for Coulisses Crew Ultra V2
# Copy to .env and adjust for your environment

# Comma separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:5173

# Token used for session signing
SECRET_KEY=changeme

# Postgres configuration
POSTGRES_USER=ccu
POSTGRES_PASSWORD=ccu
POSTGRES_DB=ccu
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis connection
REDIS_URL=redis://redis:6379/0

# Optional MinIO (S3 compatible storage)
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# Auth settings
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Trusted hosts for FastAPI
TRUSTED_HOSTS=*

# Rate limit: requests per minute
RATE_LIMIT=100
